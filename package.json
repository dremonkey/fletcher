{
  "name": "fletcher",
  "version": "1.0.0",
  "private": true,
  "description": "Voice-first bridge for OpenClaw using LiveKit",
  "repository": "dremonkey/openclaw-plugin-livekit",
  "license": "MIT",
  "workspaces": ["packages/*", "apps/voice-agent"],
  "bun": {
    "install": {
      "linker": "isolated"
    }
  },
  "scripts": {
    "build": "bun workspaces run build",
    "test": "bun workspaces run test",
    "lint": "bun workspaces run lint",
    "format": "prettier --write '**/*.{ts,tsx,js,json,md}'",
    "channel:dev": "bun --cwd packages/openclaw-channel-livekit run dev",
    "brain:dev": "bun --cwd packages/livekit-agent-ganglia run dev",
    "mobile:dev": "./scripts/run-mobile.sh",
    "mobile:ensure": "./scripts/ensure-mobile-ready.sh",
    "mobile:run": "cd apps/mobile && flutter run",
    "mobile:build:android": "cd apps/mobile && flutter build apk",
    "mobile:build:ios": "cd apps/mobile && flutter build ios",
    "token:generate": "bun run scripts/generate-token.ts",
    "agent:dev": "bun run scripts/run-agent.ts",
    "voice:dev": "bun run apps/voice-agent/src/agent.ts dev",
    "voice:connect": "bun run apps/voice-agent/src/agent.ts connect",
    "dev": "bun run packages/tui/src/cli.ts tui",
    "skills:install": "bun run packages/tui/src/install-skills.ts",
    "postinstall": "ln -sf ../../packages/tui/src/cli.ts node_modules/.bin/fletcher"
  },
  "devDependencies": {
    "@clack/prompts": "^1.0.1",
    "@livekit/rtc-node": "0.13.24",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "livekit-server-sdk": "^2.15.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@knittt/livekit-agent-ganglia": "workspace:*",
    "@livekit/agents": "^1.0.43",
    "@livekit/agents-plugin-deepgram": "^1.0.0",
    "@livekit/agents-plugin-cartesia": "^1.0.0"
  }
}
